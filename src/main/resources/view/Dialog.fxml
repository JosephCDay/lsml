<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root type="StackPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lisoft.lsml.view_fx.loadout.LoadoutWindow">
  <children>
    <BorderPane>
      <top>
        <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
          <children>
            <Group>
              <children>
                <Region layoutX="1.0" layoutY="1.0">
                  <styleClass>
                    <String fx:value="svg-logo" />
                    <String fx:value="logo" />
                  </styleClass>
                </Region>
              </children>
            </Group>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                  <Label styleClass="h2" text="Title" />
                     </children>
                  </HBox>
            <HBox styleClass="default-spacing">
              <children>
                <Button mnemonicParsing="false" onAction="#windowIconify" styleClass="decor-button">
                  <graphic>
                    <Group>
                      <children>
                        <Region styleClass="decor-iconify" />
                      </children>
                    </Group>
                  </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#windowMaximize" styleClass="decor-button">
                  <graphic>
                    <Group>
                      <children>
                        <Region styleClass="decor-max" />
                      </children>
                    </Group>
                  </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#windowClose" styleClass="decor-button">
                  <graphic>
                    <Group>
                      <children>
                        <Region styleClass="decor-close" />
                      </children>
                    </Group>
                  </graphic>
                </Button>
              </children>
            </HBox>
          </children>
          <styleClass>
            <String fx:value="material" />
            <String fx:value="header-small" />
          </styleClass>
        </HBox>
      </top>
         <center>
            <TextFlow styleClass="default-padding" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="default-padding" text="Text" />
               </children>
            </TextFlow>
         </center>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button mnemonicParsing="false" text="Close" />
              </buttons>
               <styleClass>
                  <String fx:value="default-padding" />
                  <String fx:value="default-spacing" />
               </styleClass>
            </ButtonBar>
         </bottom>
    </BorderPane>
  </children>
  <stylesheets>
    <URL value="@LoadoutStyle.css" />
  </stylesheets>
</fx:root>
