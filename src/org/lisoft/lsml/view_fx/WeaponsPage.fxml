<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lisoft.lsml.view_fx.WeaponsPage">
   <center>
      <VBox>
         <children>
            <Label styleClass="h2" text="Missile Weapons" />
            <TableView fx:id="missileWeapons" tableMenuButtonVisible="true">
               <columns>
                  <TableColumn prefWidth="75.0" text="Name" />
                  <TableColumn prefWidth="75.0" text="Mass" />
                  <TableColumn prefWidth="75.0" text="Slots" />
                  <TableColumn prefWidth="75.0" text="Damage" />
                  <TableColumn prefWidth="75.0" text="Heat" />
                  <TableColumn prefWidth="75.0" text="Cooldown" />
                  <TableColumn prefWidth="136.0" text="Range (min/long/max)" />
                  <TableColumn prefWidth="75.0" text="Speed" />
                  <TableColumn prefWidth="75.0" text="Impulse" />
                  <TableColumn prefWidth="75.0" text="Cycle time" />
               </columns>
            </TableView>
            <Label styleClass="h2" text="Ballistic Weapons" />
            <TableView fx:id="ballisticWeapons" tableMenuButtonVisible="true">
               <columns>
                  <TableColumn prefWidth="75.0" text="C1" />
                  <TableColumn prefWidth="75.0" text="C2" />
               </columns>
            </TableView>
            <Label styleClass="h2" text="Energy Weapons" />
            <TableView fx:id="energyWeapons" tableMenuButtonVisible="true">
               <columns>
                  <TableColumn prefWidth="75.0" text="C1" />
                  <TableColumn prefWidth="75.0" text="C2" />
               </columns>
            </TableView>
         </children>
         <styleClass>
            <String fx:value="default-padding" />
            <String fx:value="default-spacing" />
         </styleClass>
      </VBox>
   </center>
   <top>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="h1" text="Weapon Systems List" />
         </children>
         <styleClass>
            <String fx:value="flat" />
            <String fx:value="title" />
         </styleClass>
      </Pane>
   </top>
</fx:root>
